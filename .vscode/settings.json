{
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.preserveFocus": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.customCommand": "workbench.action.tasks.runTask|Build & Run",
    "VsCodeTaskButtons.showCounter": true,
    "VsCodeTaskButtons.tasks": [
        {
            "label": "$(play) Build & Run",
            "task": "Build & Run",
            "tooltip": "Build and run current file"
        },
        {
            "label": "$(beaker) Run Tests",
            "task": "Build and Run Tests",
            "tooltip": "Run all tests"
        }
    ],
    "code-runner.executorMap": {
        "cpp": "mkdir -p build && g++ -g $fileName -o build/$fileNameWithoutExt && ./build/$fileNameWithoutExt"
    }
} 